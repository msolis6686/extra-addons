<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

<template id="report_payment_withholding_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <div class="row mt64">
                    <div class="col-6" t-if="o.date">
                        <strong>Fecha Recibo </strong> <span t-field="o.date"/>
                    </div>
                </div>
		<h3><strong>Datos Sujeto Retenido:</strong></h3>
                <div class="row">
                    <div class="col-6" t-if="o.partner_type">
                        <t t-if="o.partner_type == 'customer'">
                            <strong>Cliente: </strong>
                        </t>
                        <t t-if="o.partner_type == 'supplier'">
                            <strong>Proveedor: </strong>
                        </t><address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
		            <div t-if="o.partner_id.vat" class="mt16">
                		    <t t-if="o.partner_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
				    <t t-else="">CUIT</t>: <span t-field="o.partner_id.vat"/>
			    </div>
		    </div>
                </div>
		<h4>Datos Retencion</h4>
                <div class="row ">
                    <div class="col-6" t-if="o.payment_method_id">
                        <strong>Retencion Aplicada: </strong><span t-field="o.tax_withholding_id.display_name"/>
                    </div>
                    <div class="col-6" t-if="o.payment_method_id">
                        <strong>Nro Retencion: </strong><span t-field="o.withholding_number"/>
                    </div>
                </div>
                <div class="row mb64">
                    <div class="col-3" t-if="o.amount">
                	<strong>Certificado de Retencion: <span t-field="o.withholding_number"/></strong>
                    </div>
                    <div class="col-3" t-if="o.amount">
                        <strong>Monto Retencion </strong><span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                    </div>
                    <div class="col-3" t-if="o.amount">
                        <strong>Monto Imponible </strong><span t-field="o.withholdable_base_amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                    </div>
                    <div class="col-3" t-if="o.communication">
                        <strong>Memo: </strong><span t-field="o.communication"/>
                     </div>
	     </div>
	     <h4>Facturas Aplicadas</h4>
	     <p />
                <table class="table table-sm">
                    <thead>
                        <tr>
			    <th><span>Fecha Factura</span></th>
                            <th><span>Nro Factura</span></th>
                            <th><span>Referencia</span></th>
                            <th class="text-right"><span>Monto Original</span></th>
                            <th class="text-right"><span>Monto Pagado</span></th>
                            <th class="text-right"><span>Balance</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.reconciled_invoice_ids" t-as="inv">
                            <td><span t-field="inv.invoice_date"/></td>
                            <td><span t-field="inv.name"/></td>
                            <td><span t-field="inv.ref"/></td>
                            <td class="text-right"><span t-field="inv.amount_total"/></td>
                            <td class="text-right"><span t-esc="o._get_invoice_payment_amount(inv)" t-options="{'widget': 'monetary', 'display_currency': inv.currency_id}"/></td>
                            <td class="text-right"><span t-field="inv.amount_residual"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
</template>

<template id="report_payment_withholding">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="l10n_ar_report_withholding.report_payment_withholding_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>

        <!-- QWeb Reports -->
        <report
            id="account_payment_withholdings"
            model="account.payment"
            string="Retenciones"
            report_type="qweb-pdf"
            name="l10n_ar_report_withholding.report_payment_withholding"
            file="l10n_ar_report_withholding.report_payment_withholding"
            attachment="(object.state in ('posted','sent')) and ('RET'+(object.withholding_number or '').replace('/','')+'.pdf')"
        />


</data>
</odoo>
