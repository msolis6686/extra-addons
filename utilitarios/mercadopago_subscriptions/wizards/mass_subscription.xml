<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="bf_mp_mass_subscription">
        <field name="model">mercadopago.mass.subscription</field>
        <field name="arch" type="xml">
            <form string="Envio de Correos de Subscripciones">
                <group>
                    <field name="message" string="Atencion:" readonly="1" force_save="1"/>
                    <field name="clients_not_found" string="No se Enviara:" readonly="1" force_save="1"/>
                </group>
                <footer>
                    <button string="Enviar Subscripciones" name="send_mass_subscriptions" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>