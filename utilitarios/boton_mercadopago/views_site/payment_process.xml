<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="aceptado_process">
      <t t-call="website.layout">
        <t t-set="title">Pago Exitoso</t>
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_text_image bg-success pb0 pt0 text-center" data-name="Text - Image">
                    <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-12 pt16 pb16 text-center">
                            <h2>
                                <b>
                                <font style="font-size: 48px;">Pago Aceptado Exitosamente</font>
                                </b>
                            </h2>
                        </div>
                        <div t-if="factura">
                            <t t-esc="factura"/>
                            <t t-esc="factura"/>
                        </div>
                    </div>
                    </div>
                </section>
                <!-- <div id="invoice_content" class="col-12 col-lg">
                    <t t-if="error or warning" t-call="account.portal_invoice_error"/>
                    <t t-if="success and (not error and not warning)" t-call="account.portal_invoice_success"/>

                    <div class="o_portal_html_view shadow p-3">
                        <div class="o_portal_html_loader text-center">
                            <i class="fa fa-circle-o-notch fa-spin fa-2x fa-fw text-black-50"></i>
                        </div>
                        <iframe id="invoice_html" class="mt8 mb8" width="100%" height="100%" frameborder="0" scrolling="no" t-att-src="factura.get_portal_url(report_type='html')"/>
                    </div>
                </div> -->
            </div>
      </t>
    </template>
    <record id="aceptado_page" model="website.page">
        <field name="name">Pagos</field>
        <field name="website_published">True</field>
        <field name="url">/aceptado</field>
        <field name="view_id" ref="aceptado_process"/>
    </record>
    <template id="cancel_process">
      <t t-call="website.layout">
        <t t-set="title">cancelado</t>
            <div id="wrap" class="oe_structure oe_empty text-center">
                <section class="s_text_image bg-danger pb0 pt0 text-center" data-name="Text - Image">
                    <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-12 pt16 pb16">
                        <h2>
                            <b>
                            <font style="font-size: 48px;">Error en Pago</font>
                            </b>
                        </h2>
                        </div>
                    </div>
                    </div>
                </section>
            </div>
      </t>
    </template>
    <record id="cancelado_page" model="website.page">
        <field name="name">Cancelado</field>
        <field name="website_published">True</field>
        <field name="url">/cancelado</field>
        <field name="view_id" ref="cancel_process"/>
    </record>

    <template id="repetido_process">
      <t t-call="website.layout">
        <t t-set="title">Pago Aceptado</t>
            <div id="wrap" class="oe_structure oe_empty text-center">
                <section class="s_text_image bg-info pb0 pt0 text-center" data-name="Text - Image">
                    <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-12 pt16 pb16">
                        <h2>
                            <b>
                            <font style="font-size: 48px;">Pago Repetido Aceptado</font>
                            </b>
                        </h2>
                        </div>
                        <div class='col-12'>Ha realizado un pago sobre una factura ya abonada. Se ha registrado el pago y se le ha agregado un saldo a favor.<br/>
                        Si tiene alguna duda no dude en contactarnos.
                        </div>
                    </div>
                    </div>
                </section>
            </div>
      </t>
    </template>

    <record id="repetido_page" model="website.page">
        <field name="name">Pagos</field>
        <field name="website_published">True</field>
        <field name="url">/repetido</field>
        <field name="view_id" ref="repetido_process"/>
    </record>

</odoo>