<odoo>
    <data>
      <!-- vista tree -->
      <record model="ir.ui.view" id="view_bf_whatsapp_templates_tree">
        <field name="name">view.bf.whatsapp.templates.tree</field>
        <field name="model">bf.whatsapp.templates</field>
        <field name="arch" type="xml">
          <tree string='Plantillas de WhatsApp'>
            <field name="name" string="Nombre"/>
            <field name="message" string="Mensaje"/>
            <field name="model" string="Modelo"/>
          </tree>
        </field>
      </record>
      <!-- vista form -->
      <record model="ir.ui.view" id="view_bf_whatsapp_templates_form">
        <field name="name">view.bf.whatsapp.templates.form</field>
        <field name="model">bf.whatsapp.templates</field>
        <field name="arch" type="xml">
          <form string='Whatsapp Templates'>
            <sheet>
              <group name='group_top'>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name" string="Nombre" required="1"/></h1>
                    <group>
                        <field name="model_id" string="ID de Modelo" required="1" options="{'no_create': True}"/>
                        <field name="model" string="Modelo"/>
                        <!-- <field name="header_message"/>
                        <field name="footer_message"/> -->
                        <field name="message" string="Mensaje"/>
                        <field name="attachment_ids" string="IDs de Adjuntos" widget="many2many_binary"/>
                        <field name="attachment_file" string="Adjunto"/>
                        <field name="report_template" string="Plantilla del Reporte" domain="[('model','=',model)]"/>
                    </group>
                </div>
              </group>
            </sheet>
          </form>
        </field>
      </record>
      <record model="ir.actions.act_window" id="bf_whatsapp_templates_action_windows">
        <field name="name">Whatsapp Templates</field>
        <field name="res_model">bf.whatsapp.templates</field>
        <field name="view_mode">tree,form</field>
      </record>

      <menuitem name="Templates" id="bf_whatsapp_base.templates" parent="bf_whatsapp_base.config" 
              action="bf_whatsapp_templates_action_windows"/>
    </data>
</odoo>