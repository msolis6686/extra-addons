<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bf_massive_wa_send_wizard_form" model="ir.ui.view">
        <field name="name">bf.massive.wa.send.wizard.form</field>
        <field name="model">bf.massive.wa.send.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <p>Se enviarán los mensajes de WhatsApp usando la siguiente plantilla.</p>
                    <group>
                        <field name="wa_template"
                            string="Plantilla"
                            options="{'no_create': True, 'no_open': True}"
                            domain="[('model','=',model)]"
                            required="1"/>
                        <field name="error" invisible="1"/>                        
                    </group>
                </sheet>
                <footer>
                    <button string="Enviar"
                        name="massive_prepare"
                        type="object"
                        class="btn-primary"
                        attrs="{'invisible':[('error', '=', True)]}"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_messages" model="ir.actions.act_window">
        <field name="name">Enviar por Whatsapp</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bf.massive.wa.send.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="bf_massive_wa_send_wizard_form"/>
        <field name="context">{'model':'account.move'}</field>
        <field name="target">new</field>
        <field name="help">Este wizard enviará por whatsapp las facturas que haya seleccionado.</field>
        <field name="binding_model_id" ref="account.model_account_move" />
        <field name="binding_view_types">list,form</field>
    </record>

</odoo>
