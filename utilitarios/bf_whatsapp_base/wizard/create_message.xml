<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="create_message_view" model="ir.ui.view">
            <field name="name">Enviar Facturas</field>
            <field name="model">bf.whatsapp.create.messages</field>
            <field name="arch" type="xml">
                <form string="Enviar Facturas por WhatsApp">
                    <span class="o_form_label">Se enviar√°n por whatsapp todas las facturas que haya seleccionado.</span>
                    <field name="message" string="Comunicado" required="1"/>
                    <group>
                        <field name="template_id"
                            string="Plantilla"
                            domain="[('model','=',model)]"
                            options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                        <field name="model" invisible="1"/>
                    </group>
                    <footer>
                        <button string="Enviar" name="prepare_messages" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>