<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- CREO EL CRON PARA ENVIAR LOS MENSAJES -->
        <record forcecreate="True" id="ir_cron_create_message_service" model="ir.cron">
            <field name="name">Enviar Mensajes de Whatsapp</field>
            <field name="model_id" ref="model_bf_whatsapp_message"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_message()</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">7</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="nextcall" >2022-10-07 08:00:00</field>
        </record>
    </data>
</odoo>